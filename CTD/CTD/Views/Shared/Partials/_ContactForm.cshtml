@model CTD.BussinessOperations.Models.ViewModels.UserViewModel

<form method="post" asp-action="ContactUs" asp-controller="Home" id="contact-form">
    <div class="row clearfix">
        <div asp-validation-summary="ModelOnly"></div>

        <div class="form-group col-lg-6 col-md-6 col-sm-12">
            <label asp-for="Name">Your name *</label>
            <input placeholder="Please Enter Name" asp-for="Name" >
            <span asp-validation-for="Name" class="text-danger field-validation-valid"></span>
        </div>

        <div class="form-group col-lg-6 col-md-6 col-sm-12">
            <label asp-for="Email">Email address *</label>
            <input asp-for="Email" placeholder="Enter Email" >
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group col-lg-6 col-md-6 col-sm-12">
            <label asp-for="Phone">Phone number *</label>
            <input asp-for="Phone" placeholder="Enter Phone" >
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <div class="form-group col-lg-6 col-md-6 col-sm-12">
            <label asp-for="Website">Website</label>
            <input asp-for="Website" placeholder="Enter Website">
        </div>

        <div class="form-group col-lg-12 col-md-12 col-sm-12">
            <label asp-for="Message">Your Message *</label>
            <textarea placeholder="" asp-for="Message" ></textarea>
            <span asp-validation-for="Message" class="text-danger"></span>
        </div>

        <div class="form-group text-center col-lg-12 col-md-12 col-sm-12">
            <button class="theme-btn btn-style-three" type="submit" name="submit-form">
                <span class="txt">Send Now</span>
            </button>
        </div>

    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
